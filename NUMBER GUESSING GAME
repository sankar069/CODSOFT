#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;
int main() {
    int secret_number, user_guess, attempts=0;

    srand(static_cast<unsigned int>(time(0)));

    secret_number = rand() % 100 +1;

    cout << "👋 Hey there! Welcome to the Number Guessing Game!" << end1;
    cout << "🔢 I'm thinking of a number between 1 and 100." << end1;
    cout << "💡 Try to guess it. Let's see how quickly you can get it right!" << end1 << end1;

    // Game Loop
    do {
        cout << "👉 Enter your guess: ";
        cin >> user_guess;
        attempts++;

        if (user_guess > secret_number) {
            cout << "😅 That's too high. Try something lower!" << end1;
        } else if (user_guess < secret_number) {
            cout << "😬 That's too low. Try going a bit higher!" << end1;
        } else {
            cout << "👏 Great job! Thanks for playing with me." << end1;
        }
    } while (user_guess != secret_number);

    return 0;
}




